{
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "windows": {
                "command": "make -f 'Makefile.windows.mak'"
            },
            "linux": {
                "command": "make -f 'Makefile.linux.mak'"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}